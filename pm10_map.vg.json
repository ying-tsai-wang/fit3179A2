{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "PM10 Map",
    "width": 650,
    "height": 500,
    "data": {
      "url": "https://raw.githubusercontent.com/ying-tsai-wang/3179/refs/heads/main/allmeasure.csv"
    },
    "params": [
      {
        "name": "Time_Filter",
        "value": 6,
        "bind": {
          "input": "range",
          "min": 6,
          "max": 18,
          "step": 6,
          "name": "Hour: "
        }
      },
       {
        "name": "Date_Selection",
        "value": 1,
        "bind": {
          "input": "range",
          "min": 1,
          "max": 27,
          "step": 13,
          "name": "Date: "
        }
      },
      {
        "name": "Month_Selection",
        "value": 1,
        "bind": {
          "input": "range",
          "min": 1,
          "max": 12,
          "step": 1,
          "name": "Month: "
        }
      }
    ],
    "transform": [
      {"filter": "hours(datum.time) == Time_Filter"},
      {"filter": "date(datum.time) == Date_Selection"},
      {"filter": "month(datum.time)+1 == Month_Selection"},
      {"filter": "datum.parameter == 'PM10'"}
      
    ],
    "projection": {
      "type": "mercator",
      "scale": 30000,
      "center": [144.85, -37.9]
    },
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/ying-tsai-wang/3179/refs/heads/main/vic_localities.json",
          "format": {
            "type": "topojson",
            "feature": "vic_localities"
          }
        },
        "mark": {
          "type": "geoshape",
          "fill": "#e0e0e0",  
          "stroke": "white"
        }
      },
      {
        "mark": {
          "type": "circle",
          "strokeWidth": 1,
          "stroke": "black",  
          "opacity": 0.8  
        },
        "encoding": {
          "longitude": {
            "field": "longitude",
            "type": "quantitative"
          },
          "latitude": {
            "field": "latitude",
            "type": "quantitative"
          },
          "size": {
            "field": "value",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [100,200],
              "range": [250,600,1000]  
            }
          },
          "color": {
            "field": "value",
            "type": "quantitative",
            "scale": {
              "domain": [0,100,200],
              "range": ["white", "darkred"]  
            },
            "legend": {
              "title": "PM10 Concentration (ug/m3)"
            }
          },
          "tooltip": [
            {
              "field": "location_name",
              "type": "nominal",
              "title": "Location"
            },
            {
              "field": "value",
              "type": "quantitative",
              "title": "PM10 (ug/m3)",
              "format": ".2f"
            },
            {
              "field": "time",
              "type": "temporal",
              "title": "Date"
            }
          ]
        }
      }
    ]
  }